#!/bin/sh

# Broadcast hotplug events on D-BUS and then call the appropriate agent

PATH="/org/handhelds/gpe/hotplug"
MESSAGE="HotplugEvent"

invoke_dbus () 
{
  cmd="dbus-send --system $PATH $MESSAGE"
  while [ $# -gt 0 ]; do
    cmd="$cmd :$1"
    shift
  done
  eval $cmd
}

case $1 in
net)
	invoke_dbus net $ACTION $INTERFACE
	;;
bluetooth)
	invoke_dbus bluetooth $ACTION $DEVICE
	;;
*)
	invoke_dbus $*
	;;
esac

exec /sbin/hotplug $*
